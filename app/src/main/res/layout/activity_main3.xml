<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/expanded_image"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/welcome"
        android:transitionName="welcome_transition"
        tools:ignore="MissingConstraints" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/only_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/only_logo"
        android:transitionName="only_logo_transition"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expanded_image" />
<!--    app:lottie_loop="true"-->

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_indicator"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/only_logo"/>

</androidx.constraintlayout.widget.ConstraintLayout>